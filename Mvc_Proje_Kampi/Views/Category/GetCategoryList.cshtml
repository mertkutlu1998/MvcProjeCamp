@using EntityLayer.Concrete
@model List<Category> /*Category'inin değerlerini tutuyor.*/
@{
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ad</th>
        <th>Açıklama</th>
        <th>Durum</th>
    </tr>
    @foreach (var ctgry in Model)
    {
        <tr>
            <td>@ctgry.CategoryID</td>
            <td>@ctgry.CategoryName</td>
            <td>@ctgry.CategoryDescription</td>
            <td>@ctgry.CategoryStatus</td>
        </tr>
    }
</table>
<br />
<a href="/Category/AddCategory">Yeni Kategori</a>
